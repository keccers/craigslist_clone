<form action="/create_new_post" method="post">
  <label for="post[title]">Title</label>
  <input type="text" name="post[title]" value="<%= @post.title %>">

  <label for="post[text]">Text</label>
  <input type="text" name="post[text]" value="<%= @post.text %>">

  <label for="post[price]">Price</label>
  <input type="text" name="post[price]" value="<%= @post.price %>">

  <label for="post[email]">Email</label>
  <input type="email" name="post[email]" value="<%= @post.email %>">

  <input type="hidden" name="category_id" value="<%= @category.id %>">
  <input type="hidden" name='post[key]' value="<%= @post.key %>">

  <input type="submit" value="SEND IT IN">
</form>
